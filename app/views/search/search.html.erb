<ul class="search_results">
  <% unless @results.nil? %>
    <% @results.each do |result| %>
      <li>
        <%=link_to h("#{result[:type]}/#{result[:page]}"), url_for_page(result[:type], result[:page], result[:revision]) %><br/>
        <%=result[:excerpt].join('<br/>') %>
      </li>
    <% end %>
  <% end %>
</ul>