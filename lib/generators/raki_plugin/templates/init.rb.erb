Raki::Plugin.register :<%=plugin_name %> do
  
  name '<%=plugin_pretty_name %> plugin'
  description 'This is a plugin for Raki'
  url 'Url to plugin site'
  author 'Author name'
  version '0.0.1'
  
  execute do
    body # Body of plugin
    params # Parameters given to plugin
    context # Execution context
    
    # Use template
    render :<%=plugin_name %>
  end
  
end